{
  "compilerOptions": {
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "incremental": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "types": [
      "node",
      "figlet",
      "jest",
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/__tests__",
    "types"
  ]
}
